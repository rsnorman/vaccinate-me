<p id="notice"><%= notice %></p>

<h1>Interaction Types</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @interaction_types.each do |interaction_type| %>
      <tr>
        <td><%= interaction_type.name %></td>
        <td><%= link_to 'Show', interaction_type %></td>
        <td><%= link_to 'Edit', edit_interaction_type_path(interaction_type) %></td>
        <td><%= link_to 'Destroy', interaction_type, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

